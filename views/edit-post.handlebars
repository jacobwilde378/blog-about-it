{{> post-edit post}}

{{#if post.comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.comments}}
          <div>
            <div>{{comment_text}}</div>
            <p>
              &mdash; {{user.username}}, {{format_date created_at}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

    <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/javascript/comment.js"></script>