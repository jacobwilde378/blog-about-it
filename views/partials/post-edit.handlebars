<article class="post">
    <form class="container">
        <input type="text" class="" id="{{id}}" name="edit-title" value="{{title}}">
        <br>
        <textarea class="" name="edit-text" id="" cols="30" rows="10">{{blog_text}}</textarea>
        <br>
        <button type="submit" class="btn btn-success">Update</button>
        <p>Created: {{format_date created_at}}</p>

    </form>
</article>
<script src="/javascript/edit.js"></script>